{
    "name": "hindsight/laravel",
    "description": "Comprehensive, pre-baked logging for Laravel packages with Hindsight",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Decahedron Technologies Ltd",
            "email": "hello@inhindsight.io"
        }
    ],
    "require": {
        "ext-json": "*",
        "monolog/monolog": "^1.1.3",
        "guzzlehttp/guzzle": "^6.3",
        "decahedron/monolog-sticky-context": "^1.0",
        "ramsey/uuid": "^3.7",
        "laravel/framework": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Hindsight\\": "src/",
            "Hindsight\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hindsight\\HindsightServiceProvider"
            ]
        }
    }
}
